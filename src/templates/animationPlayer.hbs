<div data-role="sprite-animation-player" class="flexcol">
  <p>{{localize "SPRITE-ANIMATIONS.PLAYER.DESCRIPTION"}}</p>
  <div data-role="animation-queue" class="flex0">
    <div class="form-group">
      <label>{{localize "SPRITE-ANIMATIONS.PLAYER.QUEUELIST"}}</label>
      <div data-role="queue-list">
        {{localize "SPRITE-ANIMATIONS.PLAYER.NONE"}}
      </div>
    </div>
    <div class="flexrow">
      <div class="flex1"></div>
      <div class="flex0" style="margin-right:1em;">
        <a
          data-action="clearQueue"
          class="disabled"
          title="{{localize 'SPRITE-ANIMATIONS.PLAYER.CLEAR'}}"
        ><i class="fa-solid fa-trash"></i></a>
      </div>
      <div class="flex0">
        <a
          data-action="playQueue"
          class="disabled"
          title="{{localize 'SPRITE-ANIMATIONS.PLAYER.PLAYQUEUE'}}"
        ><i class="fa-solid fa-play"></i></a>
      </div>
    </div>
  </div>
  <hr />
  <div class="animation-list flex1" data-role="animation-list">
    {{#each animations as |animation|}}
      <div>{{animation.name}}</div>
    {{/each}}
  </div>
